extends layouts/layout

block block_js
    script(type="text/javascript", src="/js/createstudent.js")

block block_body
    //include html/createstudent.html
        
    div Create User
    
    form(id="form", class="form-horizontal", method="POST")
        div(class="form-group")
            label(for="inputRa", class="col-sm-2 control-label") RA
            div(class="col-sm-3")
                input(type="text", class="form-control", id="ra", placeholder="Insira o número do RA")
                
        div(class="form-group")
            label(for="inputName", class="col-sm-2 control-label") Nome </label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="name" placeholder="Insira o nome do estudante">
            </div>
        </div>
    	<div class="form-group">
            <label for="inputEmail" class="col-sm-2 control-label"> E-mail </label>
            <div class="col-sm-3">
                <input type="email" class="form-control" id="email" placeholder="Insira o e-mail do estudante">
            </div>
        </div>
    	<div class="form-group">
            <label for="inputInstitution" class="col-sm-2 control-label"> Instituição </label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="institution" placeholder="Insira o nome da instituição">
            </div>
        </div>
    	<div class="form-group">
            <label for="inputCourse" class="col-sm-2 control-label"> Curso </label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="course" placeholder="Insira o nome do curso">
            </div>
        </div>
    	<div class="form-group">
            <label for="inputYear" class="col-sm-2 control-label"> Ano </label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="year" placeholder="Insira o ano que começou o curso">
            </div>
        </div>
    	<div class="form-group">
            <label for="inputPeriod" class="col-sm-2 control-label"> Período </label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="period" placeholder="Insira o período que começou o curso">
            </div>
        </div>
    	<div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label"> Senha </label>
            <div class="col-sm-3">
                <input type="password" class="form-control" id="password" placeholder="Insira a senha do estudante">
            </div>
        </div>
    	<div class="form-group">
            <label for="inputRepeatPassword" class="col-sm-2 control-label"> Redigite a senha </label>
            <div class="col-sm-3">
                <input type="password" class="form-control" id="repeatPassword" placeholder="Redigite a senha do estudante">
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default"> Submeter </button>
            </div>
        </div>
    </form>

    
